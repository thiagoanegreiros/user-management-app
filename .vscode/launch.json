{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug React App (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "npm test",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "test",
        "--",
        "--coverage",
        "--watchAll=false"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
